# Quickly change to frequently used directories

local -A aliases
aliases=(
    d        "$PROJECTS_DIR"
    j        "$PROJECTS_DIR/jigsaw"
    ji       "$PROJECTS_DIR/jigsaw-infra"
    jb       "$PROJECTS_DIR/jig-board"
    df       "$DOTFILES_DIR"
    r        "$PROJECTS_DIR/Reviews"
)

cd ${aliases[${1:-d}]}
pwd
